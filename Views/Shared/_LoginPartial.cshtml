@using Microsoft.AspNetCore.Identity
@using HomeOwnersApp.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="nav-link">Bem-vindo, @UserManager.GetUserName(User)</span>
    </li>
    <li class="nav-item ms-3">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "HomeOwners", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0"><i class="fa-solid fa-arrow-right-from-bracket me-1"></i>Sair</button>
        </form>
    </li>
}
</ul>
