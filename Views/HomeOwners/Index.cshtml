@model IEnumerable<HomeOwnersApp.Models.HomeOwners>

@{
    ViewData["Title"] = "Lista de Moradores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-dark my-3"><i class="fa-regular fa-square-plus me-2"></i>Adicionar morador</a>
</p>
<table id="OwnersTable" class="table table-striped table-hover align-middle">
    <thead >
        <tr>
            <th>
                Nome
            </th>
            <th>
                Telefone
            </th>
            <th>
                Idade
            </th>
            <th>
                Bairro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td >
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar">
                        <i class="fa-regular fa-pen-to-square text-secondary"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link" data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes">
                        <i class="fa-regular fa-eye text-secondary"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link" data-bs-toggle="tooltip" data-bs-placement="top" title="Deletar">
                        <i class="fa-regular fa-trash-can text-secondary"></i>
                    </a>
                </td>
            </tr>
    }
    </tbody>
</table>